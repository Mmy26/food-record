<div class="panel panel-default">
  <div class="panel-heading d-flex align-items-center justify-content-center">
    <h1><%= t('.sign_up', :default => "Sign up") %></h1>
  </div>

  <div class="panel-body d-flex align-items-center justify-content-center bg-light">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <%= render "shared/error_messages",model: f.object %>
      <div class="form-group">
        <%= f.label :ニックネーム %>
        <%= f.text_field :nickname, autofocus: true, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード (半角英数字混合)" %>
        <%= f.password_field :password, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :パスワード確認 %>
        <%= f.password_field :password_confirmation, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :"体重(Kg)" %>
        <%= f.text_field :weight, autofocus: true, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :"年齢(数字のみ)" %>
        <%= f.text_field :age, autofocus: true, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :性別 %>
        <%= f.text_field :sex, autofocus: true, class: "form-control w-100" %>
      </div>
      <div class="form-group">
        <%= f.label :"身長(数字のみ)" %>
        <%= f.text_field :height, autofocus: true, class: "form-control w-100" %>
      </div>

      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
